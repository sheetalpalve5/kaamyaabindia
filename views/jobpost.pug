script(type='text/javascript').
  var isLoggedIn=#{loggedIn};
  document.addEventListener('DOMContentLoaded', function() {
  isLoggedIn=#{loggedIn};
  if(isLoggedIn){
  document.getElementById("rclogin").style.display = "none";
  document.getElementById("logusername").style.display = "block";
  document.getElementById("logout").style.display = "block";
  document.getElementById("logusername").innerText = "Welcome "+"#{usernm}";
  }
  else{
  document.getElementById("rclogin").style.display = "block";
  document.getElementById("logusername").style.display = "none";
  document.getElementById("logout").style.display = "none";
  }
  });
