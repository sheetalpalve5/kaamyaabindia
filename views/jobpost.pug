.page-content
  .form-v1-content
    .wizard-form
      form#addjob.form-register(action='/addjob' method='post')
        #form-total
          // SECTION 1
          h2
            p.step-icon
              span 01
            span.step-text Job Information
          section
            .inner
              .wizard-header
                h3.heading Job Infomation
                p
                  | Please enter the job related information and proceed to the next step to post job openings
              .form-row
                .form-holder
                  fieldset
                    legend Company Name
                    input#corpname.form-control(type='text' name='corpname' placeholder='Company Name' required='')
                .form-holder
                  fieldset
                    legend Open Positions
                    input#positions.form-control(type='text' name='positions' placeholder=' # of positions Open' required='')
              .form-row
                .form-holder.form-holder-2
                  fieldset(style='height: 110px')
                    legend Job Description
                    textarea#desc.form-control(style='border: none' rows='5' name='desc' placeholder='' required='')
              .form-row
                .form-holder
                  fieldset
                    legend Required Skills
                    input#skills.form-control(type='text' name='skills' placeholder='Required Skills' required='')
              .form-row
              .form-row
                .form-holder.form-holder-2
                  select#expr.form-control(name='expr')
                    option(style='color:gray' value='null') Work Exp
                    option(value='Single') 0
                    option(value='Married') 1-3
                    option(value='Widowed') 3-5
                    option(value='Separated') 5-10
                    option(value='Divorced') &gt;=10
            .form-row
          // SECTION 2
          h2
            p.step-icon
              span 02
            span.step-text Skills &amp; Preferences
          section
            .inner
              .wizard-header
                h3.heading Skills &amp; Preferences
                p
                  | Please enter your infomation and proceed to the next step so we can set up your account.
              .inner
                .form-row
                  .form-holder
                    fieldset
                      legend Contact Number
                      input#phone.form-control(type='text' name='phone' placeholder='+91-1235567890' required='')
                .form-row
                  .form-holder
                    fieldset
                      legend Job Expiry Date
                      input#expiry.form-control(style='width:150px' type='date' placeholder='2004-02-09' name='expiry')
                .form-row
                  .form-holder
                    fieldset
                      legend Salary Bracket
                      input#salary.form-control(type='text' name='salary' placeholder='Per Month' required='')
                label.radio-inline
                  input(type='radio' name='pref' checked='')
                  | Part Time
                label.radio-inline
                  input(type='radio' name='pref')
                  | Full Time
                .form-row
                  .form-holder(style='margin-top:7px')
                    legend Preferred Location
                    select#sts1.form-control(onchange="print_city('city1', this.selectedIndex);" name='state' required='')
                    hr
                    select#city1.form-control(name='city' required='')
